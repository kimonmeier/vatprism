<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import net.marvk.fs.vatsim.map.view.datadetail.DataDetailPane?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<DataDetailPane headerText="%common.metar" fx:id="container" xmlns="http://javafx.com/javafx"
                xmlns:fx="http://javafx.com/fxml"
                fx:controller="net.marvk.fs.vatsim.map.view.datadetail.metardetail.MetarDetailView">
    <contentNode>
        <HBox>
            <TextArea minWidth="0" minHeight="55" prefHeight="55" prefRowCount="3" HBox.hgrow="ALWAYS"
                      maxWidth="Infinity"
                      prefWidth="200"
                      fx:id="metarText"
                      editable="false"
                      wrapText="true"/>
            <Button HBox.hgrow="ALWAYS" maxWidth="Infinity" styleClass="icon-button,square-button" maxHeight="Infinity"
                    fx:id="refreshMetar">
                <graphic>
                    <FontIcon iconLiteral="oct-download-16"/>
                </graphic>
            </Button>
        </HBox>
    </contentNode>
</DataDetailPane>
